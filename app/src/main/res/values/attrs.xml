<?xml version="1.0" encoding="utf-8"?>
<resources>
    <declare-styleable name="advDrawerLayout">
        <attr name="adl_customBehavior" format="boolean" />
        <attr name="adl_viewScale" format="float" />
        <attr name="adl_viewScrimColor" format="color" />
        <attr name="adl_viewElevation" format="dimension" />
        <attr name="adl_drawerElevation" format="dimension" />
        <attr name="adl_cardBackgroundColor" format="reference|color" />
    </declare-styleable>

    <style name="TabItemRegular">
        <item name="tabTextColor">@color/ink_3</item>
        <item name="tabSelectedTextColor">@color/pri_1</item>
        <item name="tabInlineLabel">true</item>
        <item name="tabIndicatorHeight">@dimen/px2</item>
        <item name="tabTextAppearance">@style/TabItemText</item>
    </style>

    <declare-styleable name="ItemTabView">
        <attr name="text_des" format="string"/>
        <attr name="text_data" format="string"/>
        <attr name="image" format="integer"/>
    </declare-styleable>
</resources>